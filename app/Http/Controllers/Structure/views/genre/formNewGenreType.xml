<?xml version="1.0"?>
<view>
    <mformdialog id="formNewGenreType">
        <property title="$this->data->title"  onClose="structure.reload();"/>
        <fields>
            <mtextfield id="genretype_entry" label="Entry:" prefix="gty_" width="250px"/>
        </fields>
        <tools>
            <mlinkbutton id="lbCloseGenreType" iconCls="icon-cancel" text="{{_M('Close')}}" plain="true" action="$this->data->close"/>
            <mlinkbutton id="lbSaveGenreType" iconCls="icon-save" text="{{_M('Save')}}" plain="true" action="$this->data->save"/>
        </tools>
    </mformdialog>
</view>