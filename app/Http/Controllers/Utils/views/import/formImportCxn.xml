<?xml version="1.0"?>
<view>
    <mformdialog id="formImportCxn" title="Import Cxn"  close=">fnbr/main" >
        <fields>
            <mhcontainer>
                <mspan>Importing Cxn (+ CEs) from a JSON file. The file must be generated by "Export Cxn" option.</mspan>
            </mhcontainer>
            <mfilefield id="uploadFile" label="Cxn JSON file" text="Select file" width="300px"/>
        </fields>    
        <buttons>
            <mbutton id="btnPost" text="{{_M('Send')}}" action="$this->data->action"/>
        </buttons>
    </mformdialog>
</view>