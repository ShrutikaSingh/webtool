<?xml version="1.0"?>
<view>
    <mformdialog id="formChangePassword" title="$this->data->title" >
        <property labelClass="col-md-6" />
        <fields>
            <mhiddenfield id="idUser" value="$this->data->idUser" />
            <mtextfield type="password" id="current" label="Current Password"  size="15"/>
            <mtextfield type="password" id="newPassword" label="New Password"  size="15"/>
            <mtextfield type="password" id="newPassword2" label="Retype New Password"  size="15"/>
        </fields>
        <tools>
            <mlinkbutton id="lbSave" iconCls="icon-save" text="{{_M('Save')}}" plain="true" action="$this->data->action"/>
        </tools>            
    </mformdialog>
</view>